{
    "env": {
        "test": {
            "presets": [
                ["es2015"],
                ["stage-2"]
            ],
            "plugins": [
                ["module-resolver", {
                    "root": ["./src"]
                }]
            ]
        },
        "es5": {
            "presets": [
                ["es2015"],
                ["stage-2"]
            ],
            "plugins": [
                "lodash"
            ]
        },
        "development": {
            "presets": [
                ["es2015", { "modules": false }],
                ["stage-2"]
            ],
            "plugins": [
                "add-filehash",
                "lodash"
            ]
        },
        "production": {
            "presets": [
                ["es2015", { "modules": false }],
                ["stage-2"]
            ],
            "plugins": [
                "lodash"
            ]
        }
    }
}
